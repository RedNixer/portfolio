{
  "framework": "php",
  "php": {
    "version": "8.2"
  },
  "buildCommand": "echo 'PHP build'",
  "outputDirectory": ".",
  "env": {
    "VERCEL_BYPASS_CACHE": "1"
  },
  "functions": {
    "api/**.php": {
      "runtime": "php-8.2"
    },
    "**.php": {
      "runtime": "php-8.2"
    }
  },
  "routes": [
    {
      "src": "^/(.*)\\.php$",
      "dest": "$1.php"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "api/$1.php"
    },
    {
      "src": "/(.*)",
      "dest": "index.php"
    }
  ]
}
